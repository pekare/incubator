  plexmediaserver:
    image: plexinc/pms-docker:latest
    container_name: plexmediaserver
    restart: unless-stopped
    networks:
      - proxynet
    volumes:
      - /mnt/cache/appdata/plexmediaserver/config:/config
      - /mnt/user/media:/data
    environment:
      - TZ=Europe/Stockholm
      - PLEX_UID=99
      - PLEX_GID=100
      - PLEX_CLAIM=${PLEX_CLAIM}
      - HOSTNAME=plex.example.com
      - ADVERTISE_IP=https://plex.example.com
    labels:
      - "traefik.enable=true"
      - "traefik.docker.network=proxy"
      - "traefik.port=32400"
      - "traefik.frontend.rule=Host:plex.${DOMAIN_NAME}"
